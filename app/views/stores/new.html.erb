<%= render 'common/header_navbar' %>

<div class="container-fluid">
  <h4>添加店铺</h4>
  <form action="<%= stores_path %>" method="post" enctype="multipart/form-data" class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">店铺名称</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="店铺名称" name="name" required>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">户主姓名</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="户主姓名" name="owner_name" required>
      </div>
    </div> 
    <div class="form-group">
      <label class="col-sm-2 control-label">户主电话</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="户主电话" name="owner_telephone" required>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">营业执照图片</label>
      <div class="col-sm-10">
        <input type="file" class="form-control" name="license_picture" required>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">大众点评账号</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="大众点评账号" name="dian_ping_account">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">美团账号</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="美团账号" name="mei_tuan_account">
      </div>
    </div>          
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">提交</button>
      </div>
    </div>        
  </form>
</div>