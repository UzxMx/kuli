<%= render 'common/header_navbar' %>

<div class="container-fluid">
  <h4>添加订单</h4>
  <form action="<%= orders_path %>" method="post" class="form-horizontal">
    <% @products.each do |p| %>
      <div class="form-group">
        <label class="col-sm-2 control-label"><%= p.name %></label>
        <div class="col-sm-10">
          <input type="number" class="form-control" placeholder="数量" name="product_<%= p.id %>">
        </div>
      </div>      
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">提交</button>
      </div>
    </div>        
  </form>
</div>